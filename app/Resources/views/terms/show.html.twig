{% extends 'adminbase.html.twig' %}
{% block pageheader %}Terms{% endblock %}
{% block container %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ term.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ term.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ term.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('terms_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('terms_edit', { 'id': term.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
