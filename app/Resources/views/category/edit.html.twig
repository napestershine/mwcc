{% extends '@Admin/Default/index.html.twig' %}
{% block pageheader %}Edit Category :: {{ category.title }}{% endblock %}
{% block container %}
    <div class="row">
        <div class="col-sm-10">
            <a class="btn btn-success pull-left col" href="{{ path('features_index') }}">Back</a>
            <br/><br/>
        </div>
    </div>

    <div class="col-sm-10">
        {{ form_start(edit_form, {'attr':{'class': 'form-horizontal'}}) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            {{ form_label(edit_form.title) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.title) }}
            </div>
            {{ form_errors(edit_form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.parent) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.parent) }}
            </div>
            {{ form_errors(edit_form.parent) }}
        </div>
        <br/><br/>
        <input class="btn btn-info pull-right" type="submit" value="Edit"/>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <input class="btn btn-danger pull-left" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
