{% extends 'adminbase.html.twig' %}

{% block pageheader %}About Us{% endblock %}
{% block container %}

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aboutus.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ aboutus.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ aboutus.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aboutus_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('aboutus_edit', { 'id': aboutus.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
