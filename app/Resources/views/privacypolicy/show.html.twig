{% extends 'adminbase.html.twig' %}

{% block pageheader %}Privacy Policy{% endblock %}
{% block container %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ privacyPolicy.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ privacyPolicy.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ privacyPolicy.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('privacypolicy_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('privacypolicy_edit', { 'id': privacyPolicy.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
